{
  "name": "Pledge",
  "module": "UW Core",
  "doctype": "DocType",
  "engine": "InnoDB",
  "naming_rule": "Expression",
  "autoname": "format:PLG-{YYYY}-{#####}",
  "title_field": "donor_name",
  "search_fields": "donor, donor_name, campaign, pledge_amount",
  "is_submittable": 1,
  "allow_amend": 1,
  "track_changes": 1,
  "sort_field": "modified",
  "sort_order": "DESC",
  "fields": [
    {
      "fieldname": "campaign",
      "fieldtype": "Link",
      "label": "Campaign",
      "options": "Campaign",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1,
      "bold": 1
    },
    {
      "fieldname": "donor",
      "fieldtype": "Link",
      "label": "Donor",
      "options": "Contact",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "donor_name",
      "fieldtype": "Data",
      "label": "Donor Name",
      "read_only": 1,
      "fetch_from": "donor.full_name",
      "in_list_view": 1
    },
    {
      "fieldname": "donor_organization",
      "fieldtype": "Link",
      "label": "Donor Organization",
      "options": "Organization",
      "fetch_from": "donor.organization",
      "read_only": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "column_break_1",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "pledge_date",
      "fieldtype": "Date",
      "label": "Pledge Date",
      "reqd": 1,
      "default": "Today"
    },
    {
      "fieldname": "pledge_amount",
      "fieldtype": "Currency",
      "label": "Pledge Amount",
      "reqd": 1,
      "in_list_view": 1,
      "bold": 1
    },
    {
      "fieldname": "payment_method",
      "fieldtype": "Select",
      "label": "Payment Method",
      "options": "\nPayroll Deduction\nOne-Time Gift\nCredit Card\nCheck\nACH/Bank Transfer\nCash\nStock/Securities\nOther"
    },
    {
      "fieldname": "payment_frequency",
      "fieldtype": "Select",
      "label": "Payment Frequency",
      "options": "One-Time\nWeekly\nBi-Weekly\nMonthly\nQuarterly\nAnnually",
      "default": "One-Time"
    },
    {
      "fieldname": "section_payroll",
      "fieldtype": "Section Break",
      "label": "Payroll Deduction Details",
      "depends_on": "eval:doc.payment_method=='Payroll Deduction'",
      "collapsible": 1
    },
    {
      "fieldname": "deduction_per_period",
      "fieldtype": "Currency",
      "label": "Deduction Per Period",
      "description": "Amount per payroll period"
    },
    {
      "fieldname": "number_of_deductions",
      "fieldtype": "Int",
      "label": "Number of Deductions"
    },
    {
      "fieldname": "payroll_start_date",
      "fieldtype": "Date",
      "label": "Payroll Start Date"
    },
    {
      "fieldname": "column_break_payroll",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "payroll_end_date",
      "fieldtype": "Date",
      "label": "Payroll End Date"
    },
    {
      "fieldname": "employer",
      "fieldtype": "Link",
      "label": "Employer",
      "options": "Organization"
    },
    {
      "fieldname": "section_corporate_match",
      "fieldtype": "Section Break",
      "label": "Corporate Match",
      "collapsible": 1
    },
    {
      "fieldname": "eligible_for_match",
      "fieldtype": "Check",
      "label": "Eligible for Corporate Match",
      "default": 0
    },
    {
      "fieldname": "match_amount",
      "fieldtype": "Currency",
      "label": "Expected Match Amount",
      "depends_on": "eval:doc.eligible_for_match",
      "read_only": 1
    },
    {
      "fieldname": "match_status",
      "fieldtype": "Select",
      "label": "Match Status",
      "options": "\nPending\nConfirmed\nReceived\nDenied",
      "depends_on": "eval:doc.eligible_for_match"
    },
    {
      "fieldname": "section_allocations",
      "fieldtype": "Section Break",
      "label": "Allocations"
    },
    {
      "fieldname": "allocations",
      "fieldtype": "Table",
      "label": "Pledge Allocations",
      "options": "Pledge Allocation",
      "reqd": 1,
      "description": "Designate how this pledge should be distributed among agencies. Must total 100%."
    },
    {
      "fieldname": "section_payment_schedule",
      "fieldtype": "Section Break",
      "label": "Payment Schedule",
      "collapsible": 1
    },
    {
      "fieldname": "payment_schedule",
      "fieldtype": "Table",
      "label": "Payment Schedule",
      "options": "Payment Schedule Entry",
      "description": "Expected payment dates and amounts. Auto-generated from payment frequency."
    },
    {
      "fieldname": "section_collection",
      "fieldtype": "Section Break",
      "label": "Collection Status"
    },
    {
      "fieldname": "total_collected",
      "fieldtype": "Currency",
      "label": "Total Collected",
      "read_only": 1
    },
    {
      "fieldname": "outstanding_balance",
      "fieldtype": "Currency",
      "label": "Outstanding Balance",
      "read_only": 1
    },
    {
      "fieldname": "collection_percentage",
      "fieldtype": "Percent",
      "label": "Collection %",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "column_break_collection",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "collection_status",
      "fieldtype": "Select",
      "label": "Collection Status",
      "options": "Not Started\nIn Progress\nFully Collected\nPartially Collected\nWritten Off",
      "default": "Not Started",
      "read_only": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "last_payment_date",
      "fieldtype": "Date",
      "label": "Last Payment Date",
      "read_only": 1
    },
    {
      "fieldname": "section_notes",
      "fieldtype": "Section Break",
      "label": "Notes",
      "collapsible": 1
    },
    {
      "fieldname": "notes",
      "fieldtype": "Text Editor",
      "label": "Notes"
    },
    {
      "fieldname": "workflow_state",
      "fieldtype": "Link",
      "label": "Workflow State",
      "options": "Workflow State",
      "read_only": 1,
      "hidden": 1,
      "no_copy": 1,
      "allow_on_submit": 1
    },
    {
      "fieldname": "amended_from",
      "fieldtype": "Link",
      "label": "Amended From",
      "options": "Pledge",
      "read_only": 1,
      "no_copy": 1,
      "print_hide": 1
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1, "write": 1, "create": 1, "delete": 1, "submit": 1, "cancel": 1, "amend": 1
    },
    {
      "role": "Campaign Manager",
      "read": 1, "write": 1, "create": 1, "delete": 0, "submit": 1, "cancel": 0, "amend": 1
    },
    {
      "role": "Agency Admin",
      "read": 1, "write": 0, "create": 0
    },
    {
      "role": "UW Finance",
      "read": 1, "write": 1, "create": 1, "submit": 1, "cancel": 1, "amend": 1
    },
    {
      "role": "UW Executive",
      "read": 1, "write": 0, "create": 0
    }
  ]
}
